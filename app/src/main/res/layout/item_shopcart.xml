<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <!--商店头模块-->
    <LinearLayout
        android:id="@+id/ll_shopcart_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f6f6f6"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_item_shopcart_shopselect"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/shopcart_selected" />

            <TextView
                android:id="@+id/tv_item_shopcart_shop_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="left|center"
                android:drawableLeft="@drawable/shopcart_shop"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:text="橙方智能" />

        </LinearLayout>

    </LinearLayout>


    <!--订单模块-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f6f6f6"></View>

            <!--商品名称显示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/shopcart_selected"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_item_shopcart_module_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="LED灯模块" />
            </LinearLayout>

            <!--物品详细信息模块-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_shopcart_module_select"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/shopcart_selected" />

                <ImageView
                    android:id="@+id/iv_item_shopcart__pic"
                    android:src="@drawable/led"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp" />

                <!--数量选择，商品描述模块-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_item_shopcart_module_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥100"
                        android:textColor="#e53e42"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_item_shopcart_module_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="颜色：黑色"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_item_shopcart_module_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="配置：High"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!--商品数量选择模块-->
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_item_shopcart_module_minus"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/shopcart_minus_grey" />

                        <TextView
                            android:id="@+id/et_item_shopcart_module_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/add_button"
                            android:paddingBottom="2dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="2dp"
                            android:text="1" />

                        <ImageView
                            android:id="@+id/iv_item_shopcart_module_add"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/shopcart_add_red" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#dddddd"></View>

                <!--商品删除模块-->
                <ImageView
                    android:id="@+id/iv_item_shopcart_module_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/shopcart_delete" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f6f6f6"></View>


</LinearLayout>